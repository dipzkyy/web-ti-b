<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/animations.css">
    <style>
        .members-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .page-header {
            text-align: center;
            margin-bottom: 3rem;
            padding-top: 2rem;
        }

        .page-title {
            font-size: 3rem;
            margin-bottom: 1rem;
            background: linear-gradient(45deg, #00bfff, #0080ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-subtitle {
            font-size: 1.2rem;
            color: #bfefff;
            margin-bottom: 2rem;
        }

        .anggota-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .anggota-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(12px);
            border-radius: 1rem;
            padding: 1.5rem;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
            transition: all 0.3s ease;
            position: relative;
            opacity: 0;
            transform: translateY(30px);
            animation: staggerEntry 0.6s ease forwards;
        }

        .anggota-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            border-radius: 1rem;
            padding: 2px;
            background: linear-gradient(45deg, #00bfff, #0080ff, #00bfff);
            -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
            -webkit-mask-composite: xor;
            mask-composite: exclude;
            opacity: 0.7;
        }

        .anggota-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 191, 255, 0.3);
        }

        .anggota-photo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin: 0 auto 1rem;
            background: linear-gradient(45deg, #00bfff, #0080ff);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            color: white;
            border: 3px solid rgba(255, 255, 255, 0.3);
            font-weight: bold;
        }

        .anggota-name {
            font-size: 1.1rem;
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 0.5rem;
        }

        @keyframes staggerEntry {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @media (max-width: 768px) {
            .anggota-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
            
            .page-title {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <!-- Particle Stars Background -->
    <canvas id="particles-js"></canvas>
    
    <div class="aurora"></div>

    <main class="page-entrance">
        <div class="members-container">
            <!-- Tombol Back -->
            <a href="/home" class="back-button">
                ‚Üê Kembali ke Beranda
            </a>

            <div class="page-header">
                <h1 class="page-title">üë• Anggota Kelas TI B</h1>
                <p class="page-subtitle">Komunitas Mahasiswa Teknik Informatika UNISBA Blitar</p>
            </div>
            
            <!-- Section Anggota Lengkap -->
            <div class="anggota-section">
                <div class="anggota-grid">
                    <% members.forEach((member, index) => { %>
                        <div class="anggota-card" data-index="<%= index %>">
                            <div class="anggota-photo">
                                <%= member.split(' ').map(n => n[0]).join('') %>
                            </div>
                            <div class="anggota-name"><%= member %></div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>¬© 2025 TI B UNISBA Blitar ‚Äî All Rights Reserved.</p>
    </footer>

    <script src="/js/app.js"></script>
    <script src="/js/particles.js"></script>
    
    <script>
        // Stagger animation for cards
        document.addEventListener('DOMContentLoaded', () => {
            const anggotaCards = document.querySelectorAll('.anggota-card');
            anggotaCards.forEach((card, index) => {
                const delay = index * 0.1;
                card.style.animationDelay = delay + 's';
            });
        });
    </script>
</body>
</html>