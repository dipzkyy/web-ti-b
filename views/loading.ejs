<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Loading - TI B UNISBA Blitar</title>
    <style>
        /* ========== RESET & VARIABLES ========== */
        :root {
            --primary-blue: #00bfff;
            --secondary-blue: #0080ff;
            --dark-bg: radial-gradient(circle at top, rgba(0,0,30,1), rgba(0,0,10,1));
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: "Poppins", sans-serif;
            color: white;
            background: var(--dark-bg);
            overflow: hidden;
            height: 100vh;
        }

        /* ========== LOADING CONTAINER ========== */
        .loading-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background: var(--dark-bg);
            z-index: 9999;
        }

        .loading-content {
            text-align: center;
            z-index: 10;
        }

        .logo {
            width: 100px;
            height: 100px;
            margin-bottom: 2rem;
            animation: float 3s ease-in-out infinite;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid rgba(0, 191, 255, 0.5);
            box-shadow: 0 0 20px rgba(0, 191, 255, 0.5);
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .loading-text {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 1rem;
            background: linear-gradient(45deg, #00bfff, #0080ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-shadow: 0 0 10px rgba(0, 191, 255, 0.5);
        }

        .loading-subtitle {
            font-size: 1rem;
            color: #bde3ff;
            margin-bottom: 2rem;
        }

        .progress-bar {
            width: 300px;
            height: 8px;
            background: rgba(255,255,255,0.1);
            border-radius: 4px;
            margin-top: 2rem;
            overflow: hidden;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--primary-blue), var(--secondary-blue));
            width: 0%;
            transition: width 0.3s ease;
            border-radius: 4px;
            box-shadow: 0 0 10px rgba(0, 191, 255, 0.5);
        }

        .progress-text {
            margin-top: 1rem;
            font-size: 1rem;
            color: #bde3ff;
            font-weight: 600;
        }

        /* ========== SIMPLE PARTICLE STARS ========== */
        .particles-simple {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }

        .particle {
            position: absolute;
            background-color: white;
            border-radius: 50%;
            opacity: 0;
            animation: twinkle 3s infinite;
        }

        @keyframes twinkle {
            0%, 100% { opacity: 0; transform: scale(0.5); }
            50% { opacity: 0.7; transform: scale(1); }
        }

        /* ========== AURORA BACKGROUND ========== */
        .aurora-simple {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background:
                radial-gradient(circle at 30% 30%, rgba(0, 180, 255, 0.4), transparent 70%),
                radial-gradient(circle at 70% 70%, rgba(100, 0, 255, 0.3), transparent 70%),
                linear-gradient(135deg, rgba(0, 0, 30, 0.8), rgba(0, 0, 10, 1));
            animation: auroraMove 12s ease-in-out infinite alternate;
            z-index: -2;
        }

        @keyframes auroraMove {
            0% { background-position: 0% 0%; }
            50% { background-position: 50% 100%; }
            100% { background-position: 0% 0%; }
        }
    </style>
</head>
<body>
    <!-- Simple Aurora Background -->
    <div class="aurora-simple"></div>

    <!-- Simple Particles Fallback -->
    <div class="particles-simple" id="particlesSimple"></div>

    <div class="loading-container">
        <div class="loading-content">
            <!-- Logo dengan fallback text -->
            <div class="logo-container">
                <img src="/assets/images/logokelas.png" alt="Logo TI B" class="logo" 
                     onerror="this.style.display='none'; document.getElementById('logoFallback').style.display='flex';">
                <div id="logoFallback" class="logo-fallback" style="display: none;">
                    <div style="width: 100px; height: 100px; border-radius: 50%; background: linear-gradient(45deg, #00bfff, #0080ff); display: flex; align-items: center; justify-content: center; font-size: 1.5rem; color: white; margin: 0 auto 2rem; border: 3px solid rgba(255,255,255,0.3);">
                        TI B
                    </div>
                </div>
            </div>
            
            <div class="loading-text">TI B UNISBA BILITAR</div>
            <div class="loading-subtitle">Teknik Informatika - Kelas B</div>
            
            <div class="progress-bar">
                <div class="progress-fill" id="progressFill"></div>
            </div>
            <div class="progress-text" id="progressText">Memuat...</div>
        </div>
    </div>

    <script>
        // Simple Particle System untuk Loading
        function createSimpleParticles() {
            const container = document.getElementById('particlesSimple');
            const particleCount = 100;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // Random properties
                const size = Math.random() * 3 + 1;
                const left = Math.random() * 100;
                const top = Math.random() * 100;
                const delay = Math.random() * 5;
                const duration = Math.random() * 3 + 2;

                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                particle.style.left = `${left}%`;
                particle.style.top = `${top}%`;
                particle.style.animationDelay = `${delay}s`;
                particle.style.animationDuration = `${duration}s`;

                container.appendChild(particle);
            }
        }

        // Progress Bar Animation
        function startLoading() {
            const progressFill = document.getElementById('progressFill');
            const progressText = document.getElementById('progressText');
            let progress = 0;

            console.log('ðŸ”„ Loading page started');

            const interval = setInterval(() => {
                progress += Math.floor(Math.random() * 5) + 1;
                if (progress > 100) progress = 100;
                
                progressFill.style.width = progress + '%';
                progressText.textContent = `Memuat... ${progress}%`;

                if (progress === 100) {
                    clearInterval(interval);
                    console.log('âœ… Loading complete, redirecting to home');
                    progressText.textContent = 'Selesai! Mengarahkan...';
                    
                    setTimeout(() => {
                        window.location.href = '/home';
                    }, 800);
                }
            }, 80);

            // Fallback: redirect setelah 5 detik
            setTimeout(() => {
                if (progress < 100) {
                    clearInterval(interval);
                    console.log('âš ï¸ Loading fallback triggered');
                    window.location.href = '/home';
                }
            }, 5000);
        }

        // Initialize loading page
        document.addEventListener('DOMContentLoaded', () => {
            console.log('ðŸš€ Loading page initialized');
            createSimpleParticles();
            setTimeout(startLoading, 500);
        });

        // Fallback jika JavaScript lambat
        setTimeout(() => {
            if (document.getElementById('progressFill').style.width === '0%') {
                console.log('ðŸ”„ Manual loading trigger');
                startLoading();
            }
        }, 1000);
    </script>
</body>
</html>